{{#if controller.isEditing}}
    <form {{action save this on="submit"}} class="form-horizontal">
      <legend>Edit Tasklist</legend>

      {{partial "tasklist_edit_fields"}}

      <div class="form-actions">
        <button type="submit" class="btn btn-primary">Update</button>
        <button class="btn" {{action stopEditing}}>Cancel</button>
      </div>
    </form>

{{else}}
<div class="well well-sm">
 	<a class="btn btn-primary btn-sm" {{action startEditing}}>
  		<span class="glyphicon glyphicon-edit"></span> Edit
	</a>
	<a class="btn btn-danger btn-sm" {{action remove this}}>
		<span class="glyphicon glyphicon-trash"></span> Remove
	</a>
    {{#link-to "tasklists" class="btn btn-sm btn-default"}}
        <span class="glyphicon glyphicon-list"></span>  Back
    {{/link-to}}
</div>
<table class="table table-striped">
	<tbody>
    	<tr>
        	<th>ID</th>
        	<td>{{id}}</td>
        </tr>
        <tr>
        	<th>Name</th>
           	<td>{{name}}</td>
        </tr>
        <tr>
        	<th>Tasks</th>
        	<td>{{#each task in tasks }}{{task.id}}{{/each}}</td>
        </tr>
    </tbody>
</table>
{{/if}}



